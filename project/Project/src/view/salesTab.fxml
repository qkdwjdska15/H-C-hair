<AnchorPane prefWidth="1500" prefHeight="600"
	xmlns:fx="http://javafx.com/fxml/1"
	fx:controller="controller.SalesController">

	<Label layoutX="10" layoutY="10" text="※예약현황" />

	<HBox layoutX="10" layoutY="40">
		<spacing>20</spacing>

		<ComboBox fx:id="cbx_reservationSearchList"
			promptText="검색 분류 선택" prefWidth="150" />

		<HBox layoutX="70" layoutY="40">
			<TextField fx:id="txtRSerach" promptText="선택한 형식에맞게 입력" />
			<Button fx:id="btnRSerach" text="찾기" />
		</HBox>

	</HBox>

	<TableView fx:id="reservationView" prefWidth="1220"
		prefHeight="150" layoutX="10" layoutY="70"></TableView>

	<Button fx:id="btnRChoice" text="선택" layoutX="1180"
		layoutY="220" />
	<!--이선 위로 메인시스템 첫번째 칸 -->
	<VBox layoutX="10" layoutY="240">
		<spacing>11</spacing>
		<Label text="※서비스정보" />

		<HBox>
			<Button fx:id="btnPALL" text="ALL" />
			<Button fx:id="btnPCut" text="컷트" />
			<Button fx:id="btnPFirm" text="펌" />
			<Button fx:id="btnPDigitalSetting" text="디지털.셋팅" />
			<Button fx:id="btnPVolumeMagic" text="볼륨매직" />
			<Button fx:id="btnPDyeing" text="염색" />
			<Button fx:id="btnPClinic" text="크리닉" />
		</HBox>

		<VBox alignment="CENTER_RIGHT">
			<TableView fx:id="productView" prefWidth="400"
				prefHeight="100"></TableView>
				<HBox >
				<spacing>10</spacing>
			<Button fx:id="btnProductNotAdd" text="상품추가x" />
			<Button fx:id="btnProductAdd" text="상품추가" />
				</HBox>
		</VBox>

	</VBox>

	<!--이선 위로 메인시스템 두번째 칸 -->

	<VBox layoutX="450" layoutY="240">
		<HBox>
			<padding>
				<Insets top="30" />
			</padding>
			<Label text="※" />
			<TextField fx:id="txtReservationName" />
			<Label text="님의 서비스 정보" />
		</HBox>

		<HBox>
			<padding>
				<Insets top="10" />
			</padding>
			<TableView fx:id="reservationProductPriceView"
				prefWidth="600" prefHeight="100"></TableView>
		</HBox>
	</VBox>

	<VBox alignment="CENTER_LEFT" layoutX="1050" layoutY="280">
		<padding>
			<Insets left="10" />
		</padding>
		<spacing>10</spacing>

		<HBox>
			<Label text="상품 총액 : " prefWidth="100" />
			<TextField fx:id="txtMtotalprice" />
		</HBox>

		<HBox>
			<Label text="정액권 등급 : " prefWidth="100" />
			<TextField fx:id="txtMtiketrating" />
		</HBox>

		<HBox>
			<Label text="할인율 : " prefWidth="100" />
			<TextField fx:id="txtMtiketsales" />
		</HBox>

		<HBox>
			<Label text="결제금액 : " prefWidth="100" />
			<TextField fx:id="txtMconfirmationprice" />
		</HBox>

		<HBox alignment="CENTER">
			<padding>
				<Insets top="20" />
			</padding>
			<spacing>10</spacing>
			<Button text="결제" fx:id="btnMdecision" />
			<Button text="초기화" fx:id="btnMInit" />
		</HBox>

		<!--이선 위로 메인 3번 창 -->

	</VBox>

	<VBox layoutX="10" layoutY="450" alignment="CENTER_LEFT">
		<spacing>10</spacing>
		<Label text="※금일 매장현황" />
		<TableView fx:id="SalesView" prefWidth="1400"
			prefHeight="200" />
